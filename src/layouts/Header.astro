---
import Search from '../components/Search.astro';

const isHome = Astro.url.pathname === '/';
---

<header>
    <nav class="mx-auto flex max-w-7xl items-center justify-between lg:px-8">
      <ul  class="flex">
        <li class="m-2.5 inline-flex items-center justify-center rounded-md p-2.5 text-gray-700">
          <a href="/">Home</a>
        </li>
      </ul>
      <ul>
        <li class={"m-2.5 inline-flex items-center justify-center rounded-md p-2.5 text-gray-700 " + (isHome ? "invisible" : "")}>
          <Search isHeader={true}/>
        </li>
      </ul>
      <ul>
        <li class={"m-2.5 inline-flex items-center justify-center rounded-md p-2.5 text-gray-700 " + (isHome ? "hidden" : "invisible")}>
          Home
        </li>
      </ul>
    </nav>
  </header>